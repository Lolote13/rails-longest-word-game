<h1>New game</h1>
<p>&nbsp;</p>
<ul>
<% @letters.each do |letter| %>
  <li><%= letter %></li>
<% end %>
</ul>

<p>&nbsp;</p>
<p>Submit a word proposition:</p>

<form action="score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input name="grid" type="hidden" value=<%= @letters.join %>/>
  <input id="question" type="text" name="word">
  <input type="submit" value="Go!">
</form>

